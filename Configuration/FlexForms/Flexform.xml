<T3DataStructure>
  <sheets>
   
    <!--##########################-->
    <!-- Tab for general settings -->
    <!--##########################-->
    <sDefault>
      <ROOT>
        <TCEforms>
          <sheetTitle>General Options</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>  
          
          <switchableControllerActions>
            <TCEforms>
              <label>Plugin type</label>
              <config>
                <type>select</type>
                <items type="array">
                  <numIndex index="1" type="array">
                    <numIndex index="0">Gallery</numIndex>
                    <numIndex index="1">Gallery->index</numIndex>
                  </numIndex>
                  <numIndex index="2" type="array">
                    <numIndex index="0">Album</numIndex>
                    <numIndex index="1">Album->index;DirectoryImport->showImportForm;DirectoryImport->importFromDirectory;ZipImport->showImportForm;ZipImport->importFromZip;Development->createSampleData;Development->deleteAll;Remote->addItemToAlbum;Remote->albumList;Remote->testConnection;Remote->galleryList;Item->show;Development->testExif;Feeds->rss</numIndex>
                  </numIndex>
                  <numIndex index="3" type="array">
                    <numIndex index="0">Create Sample Data</numIndex>
                    <numIndex index="1">Development->createSampleData</numIndex>
                  </numIndex>
                </items>
              </config>
            </TCEforms>
          </switchableControllerActions>


        </el>
      </ROOT>
    </sDefault>
    
    
    
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Album</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
           <settings.album.selectedAlbumId>
            <TCEforms>
              <label>Album to show</label>
              <config>
                <type>select</type>
                	<items>
						<numIndex index="0" type="array">
							<numIndex index="0">[Please select an album]</numIndex>
							<numIndex index="1"></numIndex>
						</numIndex>
					</items>
					<default></default>
					<itemsProcFunc>user_Tx_Yag_Utility_Flexform_ExtbaseDataProvider->getAlbumList</itemsProcFunc>
              </config>
            </TCEforms>
          </settings.album.selectedAlbumId>
          
          <settings.album.sorting>
            <TCEforms>
              <label>Sort by</label>
              <config>
                <type>select</type>
                	<items>
						<numIndex index="0" type="array">
							<numIndex index="filename">Filename</numIndex>
							<numIndex index="title">Title</numIndex>
							<numIndex index="description">Description</numIndex>
							<numIndex index="capturedate">Capture date</numIndex>
						</numIndex>
					</items>
					<default></default>
              </config>
            </TCEforms>
          </settings.album.sorting>
          
        </el>
      </ROOT>
    </sDEF>

  </sheets>
</T3DataStructure>